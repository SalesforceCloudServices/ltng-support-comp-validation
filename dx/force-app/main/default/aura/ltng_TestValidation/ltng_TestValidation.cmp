<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global" >
    <!-- attributes -->
    <aura:attribute name="lightningInputValue" type="String" default="I'm a lightning:input (beta) component" />
    <aura:attribute name="lightningInputFieldValue" type="String" default="I'm a lightning:inputField component" />
    <!-- handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    <!-- events -->
    <!-- elements -->
    <!-- Page Form -->
    <lightning:layout >
    <lightning:layoutItem padding="around-small" size="6">
        <!-- CREATE NEW EXPENSE -->
        <div aria-labelledby="newexpenseform">

            <!-- BOXED AREA -->
            <fieldset class="slds-box slds-theme--default slds-container--small">
   
                <div class="slds-p-bottom_large slds-p-left_large" style="width:500px">

                    <lightning:recordEditForm aura:id="recordViewForm" 
                        recordId="{!v.recordToEdit}"
                        objectApiName="ltng_CompValidationBase__c"
                    >
                    
                    <lightning:messages />                     
                        
                        <!-- DEMO input (beta) -->
                        <!-- An old-shool table is not the best approach for reactive web but I wanted to keep everything aligned on rows by the respective buttons -->
                        <table border="0" cellpadding="2" cellspacing="2">
                            <th><td colspan="3">lightning:input (beta) manipulations</td></th>
                            <tr>
                                <td>Disable/Enable:</td>
                                <td>
                                    <lightning:button
                                        label="Disable" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.disableInput}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Enable" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.enableInput}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Require/Permit:</td>
                                <td>
                                    <lightning:button
                                        label="Require" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.requireInput}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Permit" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.permitInput}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Error/Correct:</td>
                                <td>
                                    <lightning:button
                                        label="Error" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.errorInput}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Correct" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.correctInput}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Apply All/Remove All:</td>
                                <td>
                                    <lightning:button
                                        label="Apply" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.allInput}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Remove" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.removeAllInput}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                <lightning:input aura:id="input"
                                    label="lightning:input"
                                    name="input"
                                    value="{!v.lightningInputValue}"
                                />
                                </td>
                            </tr>
                        </table>
                        <!-- /DEMO input (beta) -->
                        <hr />
                        <!-- DEMO inputField -->
                        <table border="0" cellpadding="2" cellspacing="2">
                            <th><td colspan="3">lightning:inputField manipulations</td></th>
                            <tr>
                                <td>Disable/Enable:</td>
                                <td>
                                    <lightning:button
                                        label="Disable" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.disableInputField}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Enable" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.enableInputField}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Require/Permit:</td>
                                <td>
                                    <lightning:button
                                        label="Require" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.requireInputField}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Permit" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.permitInputField}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Error/Correct:</td>
                                <td>
                                    <lightning:button
                                        label="Error" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.errorInputField}"
                                    />
                                </td>
                                <td>
                                    <lightning:button
                                        label="Correct" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.correctInputField}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Apply All/Remove All:</td>
                                <td>
                                    <lightning:button label="Apply" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.allInputField}"
                                    />
                                </td>
                                <td>
                                    <lightning:button label="Remove" 
                                        class="slds-m-top--medium"
                                        variant="brand"
                                        onclick="{!c.removeAllInputField}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <lightning:inputField
                                        aura:id="inputField"
                                        fieldName="Level1__c"
                                        value="{!v.lightningInputFieldValue}"
                                        onchange="{!c.emulateDisabledInput}"
                                    />
                                </td>
                            </tr>
                        </table>
                        <!-- / DEMO inputField -->
                        
                    </lightning:recordEditForm>
                </div> 
            
            </fieldset>
        <!-- / BOXED AREA -->
        </div>
        <!-- / CREATE NEW EXPENSE -->
    </lightning:layoutItem>
    </lightning:layout>
</aura:component>