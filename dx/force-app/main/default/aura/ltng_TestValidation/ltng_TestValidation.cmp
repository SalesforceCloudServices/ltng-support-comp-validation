<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global" >
    <!-- attributes -->
    <aura:attribute name="lightningInputValue" type="String" default="I'm a lightning:input (beta) component" />
    <aura:attribute name="lightningInputFieldValue" type="String" default="I'm a lightning:inputField component" />
    <aura:attribute name="doneRenderingIsComplete" type="Boolean" default="false" />
    <aura:attribute name="options" type="List" default="[
    {'label': 'True', 'value': true},
    {'label': 'False', 'value': false}
    ]"/>
    <!-- handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    <!-- events -->
    <!-- The aura:doneRendreing event is needed to set the state of individual DOM elements on the
        initial load when they are not available in the init phase -->
    <aura:handler event="aura:doneRendering" action="{!c.doneRendering}"/>
    <!-- elements -->
    <!-- Page Form -->
    <lightning:layout >
    <lightning:layoutItem padding="around-small" size="6">
        <!-- CREATE NEW EXPENSE -->
        <div aria-labelledby="newexpenseform">

            <!-- BOXED AREA -->
            <fieldset class="slds-box slds-theme--default slds-container--small">
   
                <div class="slds-p-bottom_large slds-p-left_large" style="width:500px">

                    <lightning:recordEditForm aura:id="recordViewForm" 
                        recordId="{!v.recordToEdit}"
                        objectApiName="ltng_CompValidationBase__c"
                    >
                    
                    <lightning:messages />                     
                        
                        <!-- DEMO input (beta) -->
                        <!-- An old-shool table is not the best approach for reactive web but I wanted to keep everything aligned on rows by the respective buttons -->
                        <table border="0" cellpadding="2" cellspacing="2">
                            <tr>
                                <td colspan="3">
                                    <span class="appName slds-context-bar__label-action slds-context-bar__app-name">Demonstration of lightning:input (beta)</span>
                                    <br />
                                </td>
                            </tr>
                            <tr>
                                <td>Behavior</td>
                                <td>Done via</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Disabled</td>
                                <td>built-in property</td>
                                <td>
                                    <lightning:radioGroup 
                                        aura:id="toggleInputDisabled"
                                        name="toggleInputDisabled"
                                        label=""
                                        options="{! v.options }"
                                        value="{! v.value }"
                                        type="button"
                                        onchange="{!c.toggleInputDisabled}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Required</td>
                                <td>custom CSS</td>
                                <td>
                                    <lightning:radioGroup 
                                        aura:id="toggleInputRequired"
                                        name="toggleInputRequired"
                                        label=""
                                        options="{!v.options}"
                                        value="{!v.value}"
                                        type="button"
                                        onchange="{!c.toggleInputRequired }"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Error:</td>
                                <td>built-in SLDS CSS</td>
                                <td>
                                    <lightning:radioGroup 
                                        aura:id="toggleInputError"
                                        name="toggleInputError"
                                        label=""
                                        options="{!v.options}"
                                        value="{!v.value}"
                                        type="button"
                                        onchange="{!c.toggleInputError }"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <lightning:input aura:id="input"
                                        label="lightning:input"
                                        name="input"
                                        value="{!v.lightningInputValue}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <hr />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <span class="appName slds-context-bar__label-action slds-context-bar__app-name">Demonstration of lightning:inputField</span>
                                    <br />
                                </td>
                            </tr>
                            <tr>
                                <td>Behavior</td>
                                <td>Done via</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Disabled</td>
                                <td>custom CSS</td>
                                <td>
                                    <lightning:radioGroup 
                                        aura:id="toggleInputFieldDisabled"
                                        name="toggleInputFieldDisabled"
                                        label=""
                                        options="{! v.options }"
                                        value="{! v.value }"
                                        type="button"
                                        onchange="{!c.toggleInputFieldDisabled}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Required</td>
                                <td>custom CSS</td>
                                <td>
                                    <lightning:radioGroup 
                                        aura:id="toggleInputFieldRequired"
                                        name="toggleInputFieldRequired"
                                        label=""
                                        options="{! v.options }"
                                        value="{! v.value }"
                                        type="button"
                                        onchange="{!c.toggleInputFieldRequired}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td>Error</td>
                                <td>built-in SLDS CSS</td>
                                <td>
                                    <lightning:radioGroup 
                                        aura:id="toggleInputFieldError"
                                        name="toggleInputFieldError"
                                        label=""
                                        options="{! v.options }"
                                        value="{! v.value }"
                                        type="button"
                                        onchange="{!c.toggleInputFieldError}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <lightning:inputField
                                        aura:id="inputField"
                                        fieldName="Level1__c"
                                        value="{!v.lightningInputFieldValue}"
                                        onchange="{!c.emulateDisabledInput}"
                                    />
                                </td>
                            </tr>
                            <!--
                            <tr>
                                <td colspan="3">
                                    <lightning:button label="Set value and retrieve it" 
                                        variant="brand"
                                        onclick="{!c.emulateDisabledInput}"
                                    />
                                </td>
                            </tr>
                            -->
                        </table>
                        <!-- / DEMO inputField -->
                        
                    </lightning:recordEditForm>
                </div> 
            
            </fieldset>
        <!-- / BOXED AREA -->
        </div>
        <!-- / CREATE NEW EXPENSE -->
    </lightning:layoutItem>
    </lightning:layout>
</aura:component>